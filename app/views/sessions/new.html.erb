<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for(:session, url: login_path, method: :post) do |f| %>
        <%= f.email_field :email, hide_label: true, placeholder: 'Enter your e-mail' %>
        <%= f.password_field :password, hide_label: true, placeholder: 'Enter your password' %>
        <%= f.submit 'Sign in', class: 'btn btn-large btn-primary' %>
    <% end %>
    <p>New user? <%= link_to 'Sign up now!', register_path %></p>
  </div>
</div>
