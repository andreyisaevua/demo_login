<% provide(:title, 'Sign up') %>

<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for(@user, url: register_path, method: :post) do |f| %>
        <%= f.email_field :email, hide_label: true, placeholder: 'Enter your e-mail' %>
        <%= f.password_field :password, hide_label: true, placeholder: 'Enter password, at least 6 characters long' %>
        <%= f.password_field :password_confirmation, hide_label: true, placeholder: 'Confirm password' %>
        <%= f.submit 'Create user', class: 'btn btn-large btn-primary' %>
    <% end %>
    <p>Already have an account? <%= link_to 'Sign in', login_path %></p>
  </div>
</div>
